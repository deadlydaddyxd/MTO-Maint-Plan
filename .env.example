# MTO Maintenance Plan - Environment Variables

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mto-maintenance?retryWrites=true&w=majority
NODE_ENV=production
PORT=5000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random
SESSION_NAME=mto_session

# JWT Configuration (for additional security)
JWT_SECRET=your-jwt-secret-key-here-also-make-it-very-secure
JWT_EXPIRES_IN=24h

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Cloudinary Configuration (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Twilio Configuration (WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://your-vercel-frontend-url.vercel.app

# Security
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Cleanup Schedule (in minutes)
PHOTO_CLEANUP_INTERVAL=1440